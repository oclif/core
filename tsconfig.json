{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./lib",
    "pretty": true,
    "rootDirs": [
      "./src"
    ],
    "strict": true,
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
  },
  "include": [
    "./src/**/*"
  ]
}
